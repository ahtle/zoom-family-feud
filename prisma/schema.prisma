// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Question {
  id      Int      @id @default(autoincrement())
  name    String
  answers Answer[]
}

model Answer {
  id         Int      @id @default(autoincrement())
  name       String
  points     Int
  questionId Int
}
